<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/action_bar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/btn_right2"
            android:layout_toRightOf="@+id/btn_left2"
            android:gravity="center"
            android:textSize="@dimen/dp16"/>

        <RelativeLayout
            android:id="@+id/rl_usertitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dp16"/>

            <TextView
                android:id="@+id/tv_bottom"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_below="@+id/tv_top"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dp12"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btn_left2"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_left"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btn_right2"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_right"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/bg_btn_action_bar"
            android:paddingBottom="@dimen/dp4"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            android:text="Sign Up"/>

        <TextView
            android:id="@+id/right_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp4"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp4"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp20"
            android:visibility="gone"
            android:text="Sign Up"/>

        <ImageView
            android:id="@+id/img_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/iv_notify"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:background="@mipmap/iv_notify"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>